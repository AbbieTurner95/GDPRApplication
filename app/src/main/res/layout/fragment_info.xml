<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".UI.Fragments.InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:src="@drawable/infopic" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle"
            android:gravity="center"
            android:paddingBottom="@dimen/twentyfive_dp"
            android:text="@string/information"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/twentyeight_TS"
            android:textStyle="bold" />


        <Button
            android:id="@+id/about_btn"
            style="@android:style/Widget.DeviceDefault.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle"
            android:text="@string/about_gdpr"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="248dp" />

        <Button
            android:id="@+id/how_data_used_btn"
            style="@android:style/Widget.DeviceDefault.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle_italic"
            android:text="@string/hows_my_data_being_used" />

        <Button
            android:id="@+id/why_btn"
            style="@android:style/Widget.DeviceDefault.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle"
            android:text="@string/why_have_i_been_asked_to_get_this_app"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="374dp" />


        <Button
            android:id="@+id/faqs_btn"
            style="@android:style/Widget.DeviceDefault.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle"
            android:text="@string/faqs"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="309dp" />


        <Button
            android:id="@+id/contactus_btn"
            style="@android:style/Widget.DeviceDefault.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle"
            android:text="@string/contact_us"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="374dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>